<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <!--ticket-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="@drawable/background_layout"
        android:orientation="vertical">

        <!--Item, pic, barcode-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvItem"
                android:layout_width="253dp"
                android:layout_height="match_parent"
                android:hint="Item Name"
                android:padding="8dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                app:srcCompat="@drawable/baseline_photo_camera_black_1x" />

            <ImageButton
                android:id="@+id/ibBarcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#fff"
                android:padding="8dp"
                app:srcCompat="@drawable/barcode_icon_1x" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:hint="@string/description"
            android:padding="8dp"
            android:textSize="12sp" />

        <!-- delete and edit buttons-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:id="@+id/viewEmpty"
                android:layout_width="253dp"
                android:layout_height="match_parent"
                android:layout_weight=""
                android:background="#fff" />

            <ImageButton
                android:id="@+id/deleteIB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#fff"
                android:padding="8dp"
                app:srcCompat="@drawable/baseline_delete_black_1x" />

            <ImageButton
                android:id="@+id/editIB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#fff"
                android:padding="8dp"
                app:srcCompat="@drawable/baseline_edit_black_x1" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
